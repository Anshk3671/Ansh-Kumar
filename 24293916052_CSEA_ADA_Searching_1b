#include <stdio.h>
#include <stdlib.h>
#include <time.h>

// Function to perform binary search
int binarySearch(int arr[], int n, int key) {
    int low = 0, high = n - 1;
    while (low <= high) {
        int mid = (low + high) / 2;
        if (arr[mid] == key)
            return mid;
        else if (arr[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }
    return -1;
}

int main() {
    int n, key, result;
    clock_t start, end;
    double cpu_time_used;

    FILE *fp = fopen("binary_search_time.csv", "w");
    if (fp == NULL) {
        printf("Error creating file!\n");
        return 1;
    }

    fprintf(fp, "n,Time(seconds)\n"); // CSV Header

    printf("Binary Search Time Analysis\n");

    for (n = 1000; n <= 100000; n += 5000) {
        int *arr = (int *)malloc(n * sizeof(int));

        // Generate sorted array
        for (int i = 0; i < n; i++)
            arr[i] = i;

        key = rand() % n; // Random element to search

        start = clock();
        result = binarySearch(arr, n, key);
        end = clock();

        cpu_time_used = ((double)(end - start)) / CLOCKS_PER_SEC;

        fprintf(fp, "%d,%.10f\n", n, cpu_time_used);

        free(arr);
    }

    fclose(fp);

    printf("Data saved to 'binary_search_time.csv'.\n");
    printf("Use Excel / Python / MATLAB to plot graph of Time vs n.\n");

    return 0;
}

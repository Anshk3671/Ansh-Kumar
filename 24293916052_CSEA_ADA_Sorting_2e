#include <stdio.h>
#include <stdlib.h>
#include <time.h>

// Function to perform Bubble Sort
void bubbleSort(int arr[], int n) {
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                // Swap arr[j] and arr[j+1]
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

int main() {
    int n;
    clock_t start, end;
    double time_taken;

    FILE *fp = fopen("bubble_sort_time.csv", "w");
    if (fp == NULL) {
        printf("Error creating file!\n");
        return 1;
    }

    fprintf(fp, "n,Time(seconds)\n");

    printf("Bubble Sort Time Analysis\n");

    // Run for different sizes of n
    for (n = 1000; n <= 15000; n += 1000) {
        int *arr = (int *)malloc(n * sizeof(int));
        if (arr == NULL) {
            printf("Memory allocation failed!\n");
            return 1;
        }

        // Generate random numbers
        for (int i = 0; i < n; i++)
            arr[i] = rand() % 100000;

        // Measure sorting time
        start = clock();
        bubbleSort(arr, n);
        end = clock();

        time_taken = ((double)(end - start)) / CLOCKS_PER_SEC;
        fprintf(fp, "%d,%.10f\n", n, time_taken);

        free(arr);
    }

    fclose(fp);

    printf("Data saved to 'bubble_sort_time.csv'.\n");
    printf("Use Excel or Python to plot graph of Time vs n.\n");

    return 0;
}
